{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "DCRec Train",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": [
                "--use_memory",
                "--prefix", "tgn-attn",
                "--n_neg", "10",
                "--train_ratio", "0.01",
                "--valid_ratio", "0.001",
                // "--memory_update_at_end"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Common Debug",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}